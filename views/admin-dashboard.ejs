                    <div class="text-3xl font-bold text-purple-400" id="admin-total-recruiters">0</div>
                </div>
                <div class="glass-card p-6 rounded-2xl">
                    <div class="text-slate-400 text-sm mb-1">Total Lowongan</div>
                    <div class="text-3xl font-bold text-indigo-400" id="admin-total-jobs">0</div>
                </div>
                <div class="glass-card p-6 rounded-2xl">
                    <div class="text-slate-400 text-sm mb-1">Total Lamaran</div>
                    <div class="text-3xl font-bold text-emerald-400" id="admin-total-applications">0</div>
                </div>
            </div>
