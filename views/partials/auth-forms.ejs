<section id="auth-screen" class="fixed inset-0 z-50 flex items-center justify-center bg-slate-900 bg-[url('https://picsum.photos/seed/techbg/1920/1080')] bg-cover bg-center">
    <div class="absolute inset-0 bg-slate-900/90 backdrop-blur-sm"></div>
    <div class="relative z-10 w-full max-w-md p-0 glass rounded-2xl shadow-2xl overflow-hidden fade-in">
        <div class="flex border-b border-slate-700">
            <button onclick="switchAuthTab('login')" id="tab-login" class="flex-1 py-4 text-sm font-bold text-indigo-400 border-b-2 border-indigo-500 bg-slate-800/50 transition-all">Masuk</button>
            <button onclick="switchAuthTab('register')" id="tab-register" class="flex-1 py-4 text-sm font-bold text-slate-400 border-b-2 border-transparent hover:text-slate-200 transition-all">Daftar Baru</button>
        </div>
        <div class="p-6 sm:p-8">
            <div class="text-center mb-8">
                <div class="w-12 h-12 bg-gradient-to-tr from-indigo-500 to-purple-600 rounded-lg mx-auto flex items-center justify-center mb-3">
                    <i class="fa-solid fa-shield-halved text-xl text-white"></i>
                </div>
                <h2 class="text-2xl font-bold text-white">Lokerin Secure</h2>
            </div>
            <form id="form-login" onsubmit="handleLogin(event)">
                <div class="space-y-4">
                    <input type="email" id="login-email" class="w-full input-dark rounded-lg py-3 px-4 text-sm" placeholder="Email" required>
                    <input type="password" id="login-pass" class="w-full input-dark rounded-lg py-3 px-4 text-sm" placeholder="Password" required>
                    <button type="submit" class="w-full py-3 bg-indigo-600 hover:bg-indigo-500 text-white font-bold rounded-lg transition-all">Masuk</button>
                </div>
            </form>
            <form id="form-register" class="hidden" onsubmit="handleRegister(event)">
                <div class="space-y-4">
                    <input type="text" id="reg-name" class="w-full input-dark rounded-lg py-3 px-4 text-sm" placeholder="Nama Lengkap" required>
                    <input type="email" id="reg-email" class="w-full input-dark rounded-lg py-3 px-4 text-sm" placeholder="Email" required>
                    <select id="reg-role" class="w-full input-dark rounded-lg py-3 px-4 text-sm appearance-none" onchange="toggleCompanyField()">
                        <option value="candidate">Pencari Kerja (Talent)</option>
                        <option value="recruiter">Perusahaan (HRD)</option>
                    </select>
                    <input type="text" id="reg-company" class="hidden w-full input-dark rounded-lg py-3 px-4 text-sm" placeholder="Nama Perusahaan">
                    <input type="password" id="reg-pass" class="w-full input-dark rounded-lg py-3 px-4 text-sm" placeholder="Password" required minlength="6">
                    <button type="submit" class="w-full py-3 bg-emerald-600 hover:bg-emerald-500 text-white font-bold rounded-lg transition-all">Buat Akun</button>
                </div>
            </form>
        </div>
    </div>
</section>
